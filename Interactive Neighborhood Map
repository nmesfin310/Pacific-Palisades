      },
      {
        id: 'rustic',
        rank: 7,
        name: 'Rustic Canyon',
        price: '$5M–$15M',
        vibe: 'Secluded canyon setting with creative community and architectural significance.',
        why: 'Maximum privacy with unique architectural heritage. Strong appeal for creative and design-conscious buyers.',
        developer: 'Specialty market for smaller lots and unique parcels. Excellent for targeting design-forward clientele.',
        features: ['Maximum privacy', 'Creative community', 'Unique architecture', 'Canyon setting']
      },
      {
        id: 'elmedio',
        rank: 8,
        name: 'El Medio Bluffs',
        price: '$2M–$8M+',
        vibe: 'Consistent coastal breezes with flatter building lots and accessible location.',
        why: 'Authentic coastal lifestyle with more accessible parcels compared to premium Riviera pricing.',
        developer: 'Strong entry point for Palisades market. Good potential for smaller spec builds and first-time Palisades buyers.',
        features: ['Coastal breezes', 'Flatter lots', 'Accessible location', 'Entry-level pricing']
      }
    ];

    // UI elements
    const neighborhoodList = document.getElementById('neighborhoodList');
    const filterInput = document.getElementById('filterInput');
    const detailPanel = document.getElementById('detailPanel');
    const detailTitle = document.getElementById('detailTitle');
    const detailRank = document.getElementById('detailRank');
    const detailWhy = document.getElementById('detailWhy');
    const detailDev = document.getElementById('detailDev');
    const detailFeatures = document.getElementById('detailFeatures');
    const detailPrice = document.getElementById('detailPrice');

    function renderNeighborhoods(filter = '') {
      neighborhoodList.innerHTML = '';
      const filtered = neighborhoods.filter(n => {
        const searchText = (n.name + ' ' + n.vibe + ' ' + n.why + ' ' + n.features.join(' ')).toLowerCase();
        return searchText.includes(filter.toLowerCase());
      });
      
      filtered.forEach(n => {
        const card = document.createElement('div');
        card.className = 'neighborhood-card';
        card.dataset.id = n.id;
        card.innerHTML = `
          <div class="card-header">
            <h3 class="card-title">${n.name}</h3>
            <div class="card-rank">#${n.rank}</div>
          </div>
          <div class="card-price">${n.price}</div>
          <p class="card-desc">${n.vibe}</p>
        `;
        card.addEventListener('click', () => selectNeighborhood(n.id));
        neighborhoodList.appendChild(card);
      });
    }

    function selectNeighborhood(id) {
      const n = neighborhoods.find(x => x.id === id);
      if (!n) return;
      
      // Clear all active states
      document.querySelectorAll('.neighborhood-card').forEach(card => card.classList.remove('active'));
      document.querySelectorAll('.neighborhood-zone').forEach(zone => zone.classList.remove('active'));
      
      // Set active states
      const card = document.querySelector(`.neighborhood-card[data-id="${id}"]`);
      const zone = document.getElementById(id);
      if (card) card.classList.add('active');
      if (zone) zone.classList.add('active');
      
      // Update detail panel
      detailTitle.textContent = n.name;
      detailRank.textContent = `Rank #${n.rank}`;
      detailWhy.textContent = n.why;
      detailDev.textContent = n.developer;
      detailPrice.textContent = n.price;
      
      // Update features
      detailFeatures.innerHTML = '';
      n.features.forEach(feature => {
        const chip = document.createElement('div');
        chip.style.cssText = 'background:var(--cyan-fade);color:var(--navy);padding:6px 12px;border-radius:20px;font-size:0.85rem;font-weight:600;border:1px solid var(--cyan-light)';
        chip.textContent = feature;
        detailFeatures.appendChild(chip);
      });
      
      detailPanel.style.display = 'block';
      detailPanel.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    // Event listeners
    filterInput.addEventListener('input', e => renderNeighborhoods(e.target.value));
    
    // Add click handlers to map zones
    neighborhoods.forEach(n => {
      const zone = document.getElementById(n.id);
      if (zone) {
        zone.addEventListener('click', () => selectNeighborhood(n.id));
      }
    });

    // Initial render
    renderNeighborhoods();
    
    // Auto-select top neighborhood after brief delay
    setTimeout(() => selectNeighborhood('riviera'), 500);
  </script>
</body>
</html>
